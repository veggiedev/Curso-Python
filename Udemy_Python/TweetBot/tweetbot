    signin = driver.find_element(By.XPATH, "//a[@data-testid='login']")
    signin.click()     
except NoSuchElementException:
        time.sleep(4)
        print('exception raised')
        alt_signin = driver.find_element(By.XPATH, "//a[@data-testid='loginButton']")
        alt_signin.click()

